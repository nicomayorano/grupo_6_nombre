<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head')%>
    <link rel="stylesheet" href="/css/host-menu.css" />
  </head>
  <body>
    <%- include('../partials/header')%>
    <main>
      <div class="host-main-section-wrapper">
        <section class="host-property-section">
          <header>
            <div class="host-main-section-heading">
              <a href="/products/create" class="host-add-property-text">Agregar</br>propiedad</a>
            </div>
          </header>
          <div class="host-main-section-content">
            <h2 class="host-section-text-header main-section-header-style">
              Propiedades publicadas
            </h2>
            <div class="host-property-display">
            <% for(let i = 0; i < userProperties.length; i++) { %>
            <% if (userProperties.length === 0) { %>
              <p>No tienes propiedades registradas</p>
            <% } else { %>            
              <div class="host-property-card">
                <div class="property-card-description-wrapper">
                  <p class="property-card-description-text"><%= camelCaseToProperCase(userProperties[i].tipoPropiedad) %></p>
                  <p class="property-card-description-text"><%= userProperties[i].city %></p> 
                  <p class="property-card-description-text"><%= userProperties[i].provincia %></p> 
                </div>
                <div id="carousel<%= i %>" class="carousel slide" data-ride="carousel<%= i %>">
                  <div class="carousel-inner">
                    <div class="carousel-item active">
                      <img class="d-block w-100" src="productsImages/<%= userProperties[i].image0 %>">
                    </div>
                    <% if(userProperties[i].image1) { %>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="productsImages/<%= userProperties[i].image1 %>">
                    </div>
                    <% } %>
                    <% if(userProperties[i].image2) { %>
                    <div class="carousel-item">
                      <img class="d-block w-100" src="productsImages/<%= userProperties[i].image2 %>">
                    </div>
                    <% } %>
                  </div>
                  <a class="carousel-control-prev" type="button" data-bs-target="#carousel<%= i %>" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                  </a>
                  <a class="carousel-control-next" type="button" data-bs-target="#carousel<%= i %>" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                  </a>
                </div>
                <div class="property-card-footer">
                  <form action="/products/<%= userProperties[i].IdProduct %>/edit" method="GET" class="property-card-button-wrapper">
                    <button type="submit" class="property-card-footer-button" title="Editar"><i class="fa-solid fa-pen-to-square"></i></button>
                  </form>
                  <form action="/products/<%= userProperties[i].IdProduct %>?_method=DELETE" method="POST" class="property-card-button-wrapper">
                    <button type="submit" class="property-card-footer-button" title="Eliminar"><i class="fa-solid fa-ban"></i></button>
                  </form>
                  <form action="/products/<%= userProperties[i].IdProduct %>" method="GET" class="property-card-button-wrapper">
                    <button type="submit" class="property-card-footer-button" title="InformaciÃ³n"><i class="fa-solid fa-circle-info"></i></button>
                  </form>
                </div>
              </div>
            <% } } %>
            </div>
          </div>
        </section>
      </div>
    </main>
    <%- include('../partials/bottomBurgerMenu.ejs'); %> 
    <%- include('../partials/footer')%>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
  </body>
</html>
