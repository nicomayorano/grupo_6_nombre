<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head')%>
    <link rel="stylesheet" href="/css/host-menu.css" />
  </head>
  <body>
    <%- include('../partials/header')%>
    <main>
      <div class="host-main-section-wrapper">
        <section class="host-property-section">
          <header>
            <div class="host-main-section-heading">
              <a href="/products/create" class="host-add-property-text">Agregar</br>propiedad</a>
            </div>
          </header>
          <div class="host-main-section-content">
            <h2 class="host-section-text-header main-section-header-style">
              Propiedades publicadas
            </h2>
            <% for(let i = 0; i < userProperties.length; i++) { %>
            <% if (userProperties.length === 0) { %>
              <p>No tienes propiedades registradas</p>
            <% } else { %>
            <div class="host-property-display">
              <div class="host-property-card">
                <div class="property-card-description">
                  <span><%= userProperties[i].description + ' en ' + userProperties[i].city %></span>
                </div>
                <div class="property-photo-wrapper">
                  <img
                    src="/images/host-property-card.webp"
                    alt="Interior de <%= userProperties[i].description %>"
                    class="property-card-photo"
                    href="/products/<%= userProperties[i].IdProduct %>"
                  />
                </div>
                <div class="property-card-footer">
                  <a href="/products/<%= userProperties[i].IdProduct %>/edit" class="property-card-footer-button">
                    <i class="fa-solid fa-pen-to-square"></i>
                  </a>
                  <a href="/products/<%= userProperties[i].IdProduct %>_method=DELETE" class="property-card-footer-button">
                    <i class="fa-solid fa-ban"></i>
                  </a>
                  <a href="/products/<%= userProperties[i].IdProduct %>" class="property-card-footer-button">
                    <i class="fa-solid fa-circle-info"></i>
                  </a>
                </div>
              </div>
            </div>
            <% } } %>
          </div>
        </section>
      </div>
    </main>
    <%- include('../partials/bottomBurgerMenu.ejs'); %> 
    <%- include('../partials/footer')%>
  </body>
</html>
